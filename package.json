{
	"name": "vscode-kafka",
	"displayName": "Kafka",
	"description": "Interact with Kafka directly in VS Code",
	"publisher": "jeppeandersen",
	"version": "0.2.0",
	"engines": {
		"vscode": "^1.30.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/jlandersen/vscode-kafka"
	},
	"icon": "images/icon.png",
	"galleryBanner": {
		"color": "#1d1c1c",
		"theme": "dark"
	},
	"categories": [
		"Other"
	],
	"keywords": [
		"kafka"
	],
	"activationEvents": [
        "onCommand:vscode-kafka.explorer.createtopic",
		"onCommand:vscode-kafka.explorer.refresh",
		"onView:kafkaExplorer",
		"onDebug"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "Kafka",
			"properties": {
				"kafka.hosts": {
					"type": "string",
					"default": "",
					"description": "Initial set of brokers (host:ip) to connect to. Separate by comma for multiple hosts."
				}
			}
		},
		"commands": [
			{
				"command": "vscode-kafka.explorer.refresh",
                "title": "Refresh",
                "category": "Kafka",
				"icon": {
					"light": "images/light/refresh.svg",
					"dark": "images/dark/refresh.svg"
				}
            },
            {
				"command": "vscode-kafka.explorer.createtopic",
                "title": "Create Topic",
                "category": "Kafka",
				"icon": {
					"light": "images/light/createtopic.svg",
					"dark": "images/dark/createtopic.svg"
				}
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "vscode-kafka.explorer.refresh",
					"when": "view == kafkaExplorer",
					"group": "navigation"
                },
                {
					"command": "vscode-kafka.explorer.createtopic",
					"when": "view == kafkaExplorer",
					"group": "navigation"
				}
			]
		},
		"viewsContainers": {
			"activitybar": [
				{
					"icon": "images/kafka.svg",
					"id": "kafkaView",
					"title": "Kafka"
				}
			]
		},
		"views": {
			"kafkaView": [
				{
					"id": "kafkaExplorer",
					"name": "Explorer"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"typescript": "^3.1.4",
		"vscode": "^1.1.25",
		"tslint": "^5.8.0",
		"@types/node": "^8.10.25",
		"@types/mocha": "^2.2.42"
	},
	"dependencies": {
		"kafka-node": "^3.0.1"
	}
}
